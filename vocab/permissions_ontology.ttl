@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix : <local://security.permissions.net/vocab#> .

# Classes
:User a rdfs:Class ;
    rdfs:label "A user of the application who can have permissions."@en .

# Properties
:hasAccessTransitive a owl:TransitiveProperty, owl:ObjectProperty ;
    rdfs:label "has transitive access to" .

:hasAccess a rdf:Property ;
    rdfs:subPropertyOf :hasAccessTransitive ;
    rdfs:label "has access to" ;
    rdfs:domain :User ;
    rdfs:range rdfs:Resource .

:repAccess owl:intersectionOf ( owl:propertyChainAxiom(:handlesRegion :hasCountry :country) [ owl:propertyChainAxiom(:managedBy :hasAccessTransitive :item) ]) ;
    rdfs:subPropertyOf :hasAccess .
